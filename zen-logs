#!/bin/bash
#
# zen-logs - View Zenyatta container logs
# Usage: zen-logs
#

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "${SCRIPT_DIR}/lib/zen-core.sh"

# Check prerequisites
zen_check_not_in_container || exit 1
zen_check_setup || exit 1

echo "ðŸ“œ Viewing Zenyatta logs (Ctrl+C to exit)"
zen_divider

cd "${HOME}/zenyatta"
podman-compose logs -f ai-station
