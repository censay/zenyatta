#!/bin/bash
#
# zen-enter - Enter the Zenyatta container (replaces 'playground' alias)
# Usage: zen-enter
#

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "${SCRIPT_DIR}/lib/zen-core.sh"

# Check prerequisites
zen_check_not_in_container || exit 1
zen_check_setup || exit 1

# Check if container is running
if ! podman ps | grep -q zenyatta; then
    zen_error "Container is not running"
    echo ""
    echo "ğŸ’¡ Start it with: zen-start"
    exit 1
fi

echo "ğŸš Entering Zenyatta container"
echo ""

# Enter container
cd "${HOME}/zenyatta"
podman-compose exec ai-station /bin/bash
